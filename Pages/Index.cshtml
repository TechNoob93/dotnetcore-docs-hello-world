@page
@model IndexModel
@{    
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Nature's Wonders</title>
    <meta name="description" content="Explore the beauty of nature's wonders with stunning views and landscapes.">
    <meta name="keywords" content="nature, views, landscapes, beauty, outdoors">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <header>
        <h1>Nature's Wonders</h1>
        <nav>
            <ul>
                <li><a href="#home">Home</a></li>
                <li><a href="#gallery">Gallery</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>
    <section id="home">
        <h2>Embrace the Beauty of Nature</h2>
        <p>Experience breathtaking views and landscapes that will leave you in awe.</p>
    </section>
    <section id="gallery">
        <h2>Gallery</h2>
        <p>Explore our collection of stunning nature photographs from around the world.</p>
        <!-- Add a gallery of images here -->
    </section>
    <section id="about">
        <h2>About Us</h2>
        <p>Discover our passion for nature and our commitment to sharing its beauty with the world.</p>
    </section>
    <section id="contact">
        <h2>Contact Us</h2>
        <p>Get in touch with us to share your own nature experiences or inquire about our work.</p>
    </section>
    <footer>
        <p>&copy; 2023 Nature's Wonders</p>
    </footer>
</body>
</html>
body, h1, h2, p, ul {
    margin: 0;
    padding: 0;
}

/* Apply a background image for the entire page */
body {
    background-image: url('nature-background.jpg');
    background-size: cover;
    background-attachment: fixed;
    font-family: Arial, sans-serif;
    color: #333;
}

/* Style the header with a transparent background */
header {
    background-color: rgba(255, 255, 255, 0.7);
    padding: 20px 0;
    text-align: center;
}

h1 {
    font-size: 2.5em;
    margin-bottom: 10px;
    color: #007a4a;
}

nav ul {
    list-style: none;
}

nav li {
    display: inline;
    margin-right: 20px;
}

nav a {
    text-decoration: none;
    color: #007a4a;
    font-weight: bold;
}

/* Style the main content sections */
section {
    background-color: rgba(255, 255, 255, 0.7);
    padding: 40px;
    margin: 20px;
    border-radius: 10px;
}

h2 {
    font-size: 1.8em;
    color: #007a4a;
    margin-bottom: 20px;
}

p {
    font-size: 1.2em;
    line-height: 1.4;
}

/* Style the footer */
footer {
    background-color: rgba(255, 255, 255, 0.7);
    padding: 10px 0;
    text-align: center;
    color: #333;
    font-size: 0.8em;
}
